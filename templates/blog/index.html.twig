{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.titre }}</td>
                <td>{{ blog.texte }}</td>
                <td>{{ blog.prenom }}</td>
                <td>{{ blog.nom }}</td>
                <td>{{ blog.date ? blog.date|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="action-link">Voir</a>
                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="action-link">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de blog trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_new') }}" class="create-new-link">Créer un post de blog</a>
{% endblock %}
