{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Catégories{% endblock %}

{% block body %}
    <h1>Visualisation de : {{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="action-link">Retour à l'index</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}"class="action-link">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
