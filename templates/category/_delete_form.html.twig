<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cet item ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger" style="background-color: #dc3545; border-color: #dc3545; color: white; font-family: 'Montserrat', sans-serif;">Supprimer</button>
</form>
